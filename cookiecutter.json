{
    "project_name": "My ML Project",
    "project_slug": "{{ cookiecutter.project_name.lower().replace(' ', '_').replace('-', '_') }}",
    "package_name": "{{ cookiecutter.project_slug }}",
    "project_short_description": "A modern machine learning project",
    "author_name": "Your Name",
    "author_email": "your.email@example.com",
    "author_github_username": "yourusername",
    "project_version": "0.1.0",
    "project_license": ["MIT", "Apache-2.0", "BSD-3-Clause", "GPL-3.0", "Proprietary"],
    "project_url": "https://github.com/{{ cookiecutter.author_github_username }}/{{ cookiecutter.project_slug }}",
    
    "_template": "ML Project Configuration",
    "model_checkpoint": "distilbert-base-uncased",
    "model_task": ["text-classification", "token-classification", "text-generation", "question-answering", "summarization"],
    "dataset_name": "imdb",
    "num_labels": 2,
    "max_sequence_length": 512,
    
    "_template": "Training Configuration",
    "use_accelerate": ["yes", "no"],
    "use_deepspeed": ["no", "yes"],
    "gradient_checkpointing": ["yes", "no"],
    "mixed_precision": ["fp16", "bf16", "no"],
    "default_epochs": 3,
    "default_batch_size": 16,
    "default_learning_rate": "3e-4",
    
    "_template": "Infrastructure Configuration", 
    "default_cloud": ["gcp", "aws", "azure"],
    "use_skypilot": ["yes", "no"],
    "docker_support": ["yes", "no"],
    "use_poetry": ["no", "yes"],
    "use_conda": ["no", "yes"],
    
    "_template": "Development Configuration",
    "python_version": ["3.11", "3.10", "3.12", "3.9"],
    "use_pre_commit": ["yes", "no"],
    "include_notebooks": ["yes", "no"],
    "use_mkdocs": ["no", "yes"],
    "code_formatter": ["ruff", "black"],
    "import_sorter": ["ruff", "isort"],
    "type_checker": ["mypy", "pyright", "none"],
    "test_framework": ["pytest", "unittest"],
    
    "_template": "Data Processing Configuration",
    "use_polars": ["yes", "no"],
    "use_dask": ["no", "yes"],
    "data_validation": ["pydantic", "pandera", "none"],
    
    "_template": "Serving Configuration",
    "serving_framework": ["litserve", "fastapi", "flask"],
    "include_api_docs": ["yes", "no"],
    "use_docker_compose": ["yes", "no"],
    
    "_template": "CI/CD Configuration",
    "use_github_actions": ["yes", "no"],
    "run_security_checks": ["yes", "no"],
    "auto_dependency_updates": ["dependabot", "renovate", "none"],
    "code_coverage_tool": ["codecov", "coveralls", "none"],
    
    "_template": "Advanced Features",
    "include_mlflow": ["no", "yes"],
    "include_wandb": ["no", "yes"],
    "include_tensorboard": ["yes", "no"],
    "experiment_tracking": ["tensorboard", "mlflow", "wandb", "none"],
    "model_registry": ["none", "mlflow", "wandb"],
    "hyperparameter_tuning": ["none", "optuna", "ray-tune"],
    
    "_template": "Generated Values (Do not modify)",
    "current_year": "{% now 'utc', '%Y' %}",
    "__package_import_name": "{{ cookiecutter.package_name.replace('-', '_') }}"
}